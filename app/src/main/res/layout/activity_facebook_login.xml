<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/add_account"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@color/primary"
            android:onClick="openFbWebView"
            android:text="@string/add_account" />

        <LinearLayout
            android:id="@+id/accounts_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/add_account"
            android:layout_alignLeft="@+id/add_account"
            android:layout_alignRight="@+id/add_account"
            android:layout_alignStart="@+id/add_account"
            android:layout_below="@+id/add_account"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accounts_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/select_account"/>

            <Spinner
                android:id="@+id/accounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:layout_margin="10dp"
                android:onClick="openFbWebView"
                android:text="@string/login" />

        </LinearLayout>

</RelativeLayout>